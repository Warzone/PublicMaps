<map proto="1.4.2">
<name>Sunset Glaze</name>
<version>1.0.2</version>
<objective>Leak the enemy's gold core!</objective>
<gamemode>dtc</gamemode>
<authors>
    <author uuid="0c44ca5a-6a42-49b7-81f2-58dc6d2ae3e9"/> <!-- Xerocoles -->
</authors>
<teams>
    <team id="blue" color="blue" max="5">Blue</team>
    <team id="red" color="dark red" max="5">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow"/>
        <item slot="2" unbreakable="true" material="stone pickaxe"/>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" damage="1" amount="32" material="wood"/>
        <item slot="5" amount="16" material="glass"/>
        <item slot="8" material="golden apple"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" color="4C4C4C" material="leather leggings"/>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="3" amplifier="255">regeneration</effect>
        <effect duration="4" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <regions yaw="-90">
            <cuboid min="-69.5,28,14.5" max="-68.5,28,18.5"/>
        </regions>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <regions yaw="-135">
            <cuboid min="-55.5,11,60.5" max="-54.5,11,59.5"/>
        </regions>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <regions yaw="45">
            <cuboid min="-28.5,11,-27.5" max="-29.5,11,-26.5"/>
        </regions>
    </spawn>
</spawns>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
    <not id="no-void">
        <void/>
    </not>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" min="-39,53" max="-57,64"/>
        <rectangle id="red-spawn" min="-45,-20" max="-27,-31"/>
    </union>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply block="never" region="spawns" message="You may not edit the spawns!"/>
    <apply block-place="no-void" message="You may not build in the void!"/>
</regions>
<cores material="gold block" leak="2" mode-changes="true">
    <core team="red">
        <region>
            <cuboid min="-55,12,-8" max="-58,9,-11"/>
        </region>
    </core>
    <core team="blue">
        <region>
            <cuboid min="-26,12,41" max="-29,9,44"/>
        </region>
    </core>
</cores>
<modes>
    <mode after="10m" material="coal block" name="`8Coal `0Core `6Mode"/>
    <mode after="15m" material="packed ice" name="`bPacked Ice `0Core `6Mode"/>
</modes>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>gold block</item>
    <item>coal block</item>
    <item>string</item>
    <item>sapling</item>
</itemremove>
<block-drops>
    <rule>
        <filter>
            <any>
                <material>wood</material>
                <material>glass</material>
            </any>
        </filter>
        <drops>
            <item chance="0" material="glass"/>
        </drops>
    </rule>
</block-drops>
<itemkeep>
    <item>golden apple</item>
    <item>wood</item>
    <item>glass</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="8" damage="1" material="wood"/>
    <item amount="4" material="glass"/>
</kill-reward>
<maxbuildheight>18</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
