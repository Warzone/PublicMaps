<map proto="1.4.2" game="Destroy the Wool">
<name>Thrive 2</name>
<created>2018-05-27</created>
<version>2.0.0</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="dfacf568-6110-4362-809c-6c59c1eb6391"/> <!-- _Rascal -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"/> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="10">Blue</team>
    <team id="red-team" color="dark red" max="10">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" unbreakable="true" material="iron axe"/>
        <item slot="3" amount="64" material="wood"/>
        <item slot="8" amount="64" material="cooked beef"/>
        <item slot="9" amount="32" material="arrow"/>
        <helmet unbreakable="true" material="iron helmet"/>
        <boots unbreakable="true" material="iron boots"/>
    </kit>
    <kit id="blue-kit" parents="default">
        <chestplate unbreakable="true" color="3C44AA" material="leather chestplate"/>
        <leggings unbreakable="true" color="3C44AA" material="leather leggings"/>
    </kit>
    <kit id="red-kit" parents="default">
        <chestplate unbreakable="true" color="B02E26" material="leather chestplate"/>
        <leggings unbreakable="true" color="B02E26" material="leather leggings"/>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="180" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" region="red-spawn"/>
    <default yaw="-90" region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="25%" repairable="false" materials="wool" show-progress="true" sparks="true">
    <destroyable name="Left Wool" owner="blue-team" region="left-blue-wool"/>
    <destroyable name="Right Wool" owner="blue-team" region="right-blue-wool"/>
    <destroyable name="Left Wool" owner="red-team" region="left-red-wool"/>
    <destroyable name="Right Wool" owner="red-team" region="right-red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="left-blue-wool" min="44,18,-9" max="47,23,-12"/>
        <cuboid id="right-blue-wool" min="-43,18,-9" max="-46,23,-12"/>
        <cuboid id="left-red-wool" min="-43,18,-85" max="-46,23,-88"/>
        <cuboid id="right-red-wool" min="44,18,-85" max="47,23,-88"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="-3,16,-6" max="5,25,1"/>
        <cuboid id="red-spawn-protection" min="3,16,-92" max="-5,25,-99"/>
    </union>
    <point id="blue-spawn">0.5,18,-1.5</point>
    <point id="red-spawn">0.5,18,-95.5</point>
    <point id="obs-spawn">-58.5,56,-48.5</point>
    <negative id="not-map">
        <rectangle id="map" min="-60,-116" max="61,19"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map" block="never" message="You may not edit outside the map!"/>
    <apply region="spawn-protections" block="never" message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection" enter="red-only" message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>iron axe</item>
    <item>wood</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>iron helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="5"/>
        </filter>
        <item amount="10" material="arrow"/>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>50</maxbuildheight>
</map>