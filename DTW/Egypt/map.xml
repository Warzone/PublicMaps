<?xml version="1.0"?>
<map proto="1.4.0" game="Destroy the Wool">
<name>Egypt</name>
<version>1.0.0</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="8e96ab64-74fa-46ab-b436-d35187e118af"/> <!-- Mega_Rascal -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"></contributor> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="50">Blue</team>
    <team id="yellow-team" color="yellow" max="50">Yellow</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">stone axe</item>
        <item slot="3" amount="64">wood</item>
        <item slot="4" amount="64">wood</item>
        <item slot="8" amount="64">cooked beef</item>
        <item slot="9" amount="24">arrow</item>
        <leggings unbreakable="true">chainmail leggings</leggings>
        <boots unbreakable="true">iron boots</boots>
    </kit>
    <kit id="blue-kit" parents="default">
        <helmet unbreakable="true" color="3C44AA">leather helmet</helmet>
        <chestplate unbreakable="true" color="3C44AA">leather chestplate</chestplate>
    </kit>
    <kit id="yellow-kit" parents="default">
        <helmet unbreakable="true" color="E5E533">leather helmet</helmet>
        <chestplate unbreakable="true" color="E5E533">leather chestplate</chestplate>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="180" region="blue-spawn"/>
    <spawn team="yellow-team" kit="yellow-kit" region="yellow-spawn"/>
    <default yaw="-90" region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="25%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Blue Wool" owner="blue-team" materials="wool" region="blue-wool"/>
    <destroyable name="Yellow Wool" owner="yellow-team" materials="wool" region="yellow-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="yellow-only">yellow-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="blue-wool" min="-14,28,78"  max="-17,33,81"/>
        <cuboid id="yellow-wool" min="-14,28,-41" max="-17,33,-44"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="-11,0,106" max="-21,oo,93"/>
        <cuboid id="yellow-spawn-protection" min="-11,0,-57" max="-21,oo,-70"/>
    </union>
    <point id="blue-spawn">-15.5,13,103.5</point>
    <point id="yellow-spawn">-15.5,13,-66.5</point>
    <point id="obs-spawn">-59.5,50,18.5</point>
    <negative id="not-map">
        <rectangle id="map" min="-50,-73" max="19,110"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="yellow-spawn-protection"  enter="yellow-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>stone axe</item>
    <item>wood</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
        <item amount="4">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>40</maxbuildheight>
</map>
