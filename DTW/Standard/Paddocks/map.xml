<map proto="1.4.0" game="Destroy the Wool">
<name>Paddocks</name>
<version>1.0.4</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="db3e4ab9-7c34-4342-8aca-63db60ec8d1b"/> <!-- slees -->
</authors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="50">Blue</team>
    <team id="red-team" color="dark red" max="50">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">iron pickaxe</item>
        <item slot="3" unbreakable="true">iron axe</item>
        <item slot="4" amount="64">wood</item>
        <item slot="8" amount="64">cooked beef</item>
        <item slot="9" amount="32">arrow</item>
        <helmet unbreakable="true">iron helmet</helmet>
        <boots unbreakable="true">iron boots</boots>
    </kit>
    <kit id="blue-kit" parent="default">
        <chestplate unbreakable="true" color="3C44AA">leather chestplate</chestplate>
        <leggings unbreakable="true" color="3C44AA">leather leggings</leggings>
    </kit>
    <kit id="red-kit" parent="default">
        <chestplate unbreakable="true" color="B02E26">leather chestplate</chestplate>
        <leggings unbreakable="true" color="B02E26">leather leggings</leggings>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="180" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="180" region="red-spawn"/>
    <default yaw="90" region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="23%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Left Wool"  owner="blue-team" materials="wool" region="left-blue-wool"/>
    <destroyable name="Right Wool" owner="blue-team" materials="wool" region="right-blue-wool"/>
    <destroyable name="Left Wool"  owner="red-team"  materials="wool" region="left-red-wool"/>
    <destroyable name="Right Wool" owner="red-team"  materials="wool" region="right-red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="left-blue-wool"  min="67,76,62"   max="72,84,67"/>
        <cuboid id="right-blue-wool" min="-14,76,62"  max="-19,84,67"/>
        <cuboid id="left-red-wool"   min="-14,76,-67" max="-19,84,-72"/>
        <cuboid id="right-red-wool"  min="67,76,-67"  max="72,84,-72"/>
    </union>
    <union id="spawn-protections">
        <cylinder id="blue-spawn-protection" base="26.5,0,104.5"  radius="12" height="255"/>
        <cylinder id="red-spawn-protection"  base="26.5,0,-109.5" radius="12" height="255"/>
    </union>
    <point id="blue-spawn">26.5,87,104.5</point>
    <point id="red-spawn">26.5,87,-109.5</point>
    <point id="obs-spawn">56.5,125,-2.5</point>
    <negative id="not-map">
        <rectangle id="map" min="-25,-124" max="78,119"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>iron pickaxe</item>
    <item>iron axe</item>
    <item>wood</item>
    <item>arrow</item>
    <item>cooked beef</item>
    <item>iron helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>golden apple</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
        <item amount="2">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>100</maxbuildheight>
</map>
