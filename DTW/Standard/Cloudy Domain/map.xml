<map proto="1.4.0" game="Destroy the Wool">
<name>Cloudy Domain</name>
<version>1.0.1</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="1efb8402-9073-4099-b379-41edeae67fe6"/> <!-- BitCritterSpyro -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="TGM to PGM conversion"></contributor> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="50">Blue</team>
    <team id="red-team" color="dark red" max="50">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">iron axe</item>
        <item slot="3" amount="64">wood</item>
        <item slot="4" amount="64">wood</item>
        <item slot="5" amount="64">wood</item>
        <item slot="8" amount="64">cooked beef</item>
        <item slot="9" amount="64">arrow</item>
        <helmet unbreakable="true">iron helmet</helmet>
        <boots unbreakable="true">iron boots</boots>
    </kit>
    <kit id="blue-kit" parents="default">
        <chestplate unbreakable="true" color="3C44AA">leather chestplate</chestplate>
        <leggings unbreakable="true" color="3C44AA">leather leggings</leggings>
    </kit>
    <kit id="red-kit" parents="default">
        <chestplate unbreakable="true" color="B02E26">leather chestplate</chestplate>
	    <leggings unbreakable="true" color="B02E26">leather leggings</leggings>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="90" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="-90" region="red-spawn"/>
    <default region="obs-spawn" yaw="-90"/>
</spawns>
<!-- Monuments -->
<destroyables completion="32%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Left Wool"  owner="blue-team" materials="wool" region="left-blue-wool"/>
    <destroyable name="Right Wool" owner="blue-team" materials="wool" region="right-blue-wool"/>
    <destroyable name="Left Wool"  owner="red-team"  materials="wool" region="left-red-wool"/>
    <destroyable name="Right Wool" owner="red-team"  materials="wool" region="right-red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="left-blue-wool"  min="163,128,-68" max="168,138,-73"/>
        <cuboid id="right-blue-wool" min="169,128,-10" max="174,138,-15"/>
        <cuboid id="left-red-wool"   min="11,128,-10"  max="16,138,-15"/>
        <cuboid id="right-red-wool"  min="5,128,-68"   max="10,138,-73"/>
    </union>
    <union id="spawn-protections">
        <cylinder id="blue-spawn-protection" base="153,125,-41.5"  radius="10" height="255"/>
        <cylinder id="red-spawn-protection"  base="25.5,125,-41.5" radius="10" height="255"/>
    </union>
    <point id="blue-spawn">153.5,127,-41.5</point>
    <point id="red-spawn">25.5,127,-41.5</point>
    <point id="obs-spawn">89.5,213,-41.5</point>
    <negative id="not-map">
        <rectangle id="map" min="-2,-81" max="181,-2"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map."/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>iron axe</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>iron helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
        <item amount="5">wood</item>
	<item amount="2">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<crafting>
    <disable>shears</disable>
</crafting>
<maxbuildheight>160</maxbuildheight>
</map>
