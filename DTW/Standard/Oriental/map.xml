<?xml version="1.0"?>
<map proto="1.4.0" game="Destroy the Wool">
<name>Oriental</name>
<version>1.0.0</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="c5772145-2c33-49e6-8729-cef7cc20f0cc"/> <!-- Disastur -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"></contributor> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="8">Blue</team>
    <team id="red-team" color="dark red" max="8">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">stone pickaxe</item>
        <item slot="3" unbreakable="true">stone axe</item>
	<item slot="4" amount="32">wood</item>
        <item slot="8" amount="64">cooked beef</item>
        <item slot="9" amount="64">arrow</item>
        <helmet unbreakable="true">iron helmet</helmet>
        <leggings unbreakable="true">chainmail leggings</leggings>
    </kit>
    <kit id="blue-kit" parents="default">
        <chestplate unbreakable="true" color="3C44AA">leather chestplate</chestplate>
        <boots unbreakable="true" color="3C44AA">leather boots</boots>
    </kit>
    <kit id="red-kit" parents="default">
        <chestplate unbreakable="true" color="B02E26">leather chestplate</chestplate>
	<boots unbreakable="true" color="B02E26">leather boots</boots>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="-145" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="145" region="red-spawn"/>
    <default region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="42%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Blue Wool" owner="blue-team" materials="wool" region="blue-wool"/>
    <destroyable name="Red Wool" owner="red-team" materials="wool" region="red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="blue-wool" min="52,31,-27"  max="53,39,-34"/>
        <cuboid id="red-wool" min="184,31,-27" max="185,39,-34"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="24,0,-36" max="33,oo,-24"/>
        <cuboid id="red-spawn-protection" min="214,0,-36" max="203,oo,-24"/>
    </union>
    <point id="blue-spawn">27.5,16,-29.5</point>
    <point id="red-spawn">209.5,16,-29.5</point>
    <point id="obs-spawn">118.5,52,-80.5</point>
    <negative id="not-map">
        <rectangle id="map" min="13,-62" max="223,-14"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>stone pickaxe</item>
    <item>stone axe</item>
    <item>wood</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>iron helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
	<item amount="2">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>40</maxbuildheight>
</map>
