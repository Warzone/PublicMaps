<?xml version="1.0"?>
<map proto="1.4.0" game="Destroy the Wool">
<name>Vortex</name>
<version>1.0.2</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="db3e4ab9-7c34-4342-8aca-63db60ec8d1b"/> <!-- slees -->
    <author uuid="b3d091f3-d94f-4546-a908-6a513d260615"/> <!-- Goriest -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"></contributor> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="8">Blue</team>
    <team id="red-team" color="dark red" max="8">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">iron pickaxe</item>
        <item slot="3" unbreakable="true">iron axe</item>
	<item slot="4" amount="64">wood</item>
	<item slot="8" amount="64">golden carrot</item>
        <item slot="28" amount="32">arrow</item>
        <leggings unbreakable="true">chainmail leggings</leggings>
    </kit>
    <kit id="blue-kit" parents="default">
        <helmet unbreakable="true" color="3C44AA">leather helmet</helmet>
        <chestplate unbreakable="true" color="3C44AA">leather chestplate</chestplate>
        <boots unbreakable="true" color="3C44AA">leather boots</boots>
    </kit>
    <kit id="red-kit" parents="default">
        <helmet unbreakable="true" color="B02E26">leather helmet</helmet>
        <chestplate unbreakable="true" color="B02E26">leather chestplate</chestplate>
	<boots unbreakable="true" color="B02E26">leather boots</boots>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="-135" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="45" region="red-spawn"/>
    <default region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="28%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Light Blue Wool" owner="blue-team" materials="wool" region="light-blue-wool"/>
    <destroyable name="Red Wool" owner="red-team" materials="wool" region="red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="light-blue-wool" min="-59,24,-8"  max="-62,28,-15"/>
        <cuboid id="red-wool" min="60,24,9" max="63,28,16"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="-60,24,15" max="-68,oo,23"/>
        <cuboid id="red-spawn-protection" min="61,24,-14" max="69,oo,-22"/>
    </union>
    <union id="spawner-regions">
        <cuboid id="middle-spawner" min="0.4,21,0.4" max="0.6,21,0.6"/>
        <cuboid id="middle-spawner-radius" min="-5,21,-4" max="6,25,5"/>
    </union>
    <union id="gold-blocks">
        <cuboid id="blue-gold" min="-53,19,13" max="-57,23,22"/>
        <cuboid id="red-gold" min="54,19,-12" max="58,23,-21"/>
    </union>
    <cuboid id="anti-under-bridge" min="-oo,0,-oo" max="oo,18,oo"/>
    <point id="blue-spawn">-64.5,25,19.5</point>
    <point id="red-spawn">65.5,25,-18.5</point>
    <point id="obs-spawn">0.5,65,0.5</point>
    <negative id="not-map">
        <rectangle id="map" min="70,-25" max="-69,26"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="anti-under-bridge"     block="never"     message="You may not bridge here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Renewables -->
<renewables>
    <renewable region="gold-blocks" rate="1" particles="true" grow="true" sound="false" avoid-players="2">
      <renew-filter>
          <material>gold block</material>
      </renew-filter>
      <replace-filter>
	  <any>
              <material>air</material>
              <material>wood</material>
	  </any>
      </replace-filter>
    </renewable>
</renewables>
<!-- Spawner -->
<spawners>
    <spawner spawn-region="middle-spawner" player-region="middle-spawner-radius" max-entities="9999" delay="8s">
        <item amount="1" material="iron ingot"/>
    </spawner>
</spawners>
<!-- Item Remove -->
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>iron pickaxe</item>
    <item>iron axe</item>
    <item>wood</item>
    <item>golden carrot</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
	<item amount="2">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>40</maxbuildheight>
</map>
