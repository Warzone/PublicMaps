<map proto="1.4.2" game="Destroy the Wool">
<name>Terrace 2</name>
<created>2017-10-22</created>
<version>1.0.0</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="adc72590-0a22-4f29-b04b-b4e05e1c7b60"/> <!-- 34_ -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"/> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="yellow-team" color="yellow" max="50">Yellow</team>
    <team id="red-team" color="dark red" max="50">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" unbreakable="true" material="stone axe"/>
        <item slot="3" amount="64" material="wood"/>
        <item slot="4" amount="64" material="wood"/>
        <item slot="5" amount="64" material="wood"/>
        <item slot="8" amount="64" material="cooked beef"/>
        <item slot="9" amount="32" material="arrow"/>
        <chestplate unbreakable="true" material="chainmail chestplate"/>
        <boots unbreakable="true" material="iron boots"/>
    </kit>
    <kit id="yellow-kit" parents="default">
        <helmet unbreakable="true" color="E5E533" material="leather helmet"/>
        <leggings unbreakable="true" color="E5E533" material="leather leggings"/>
    </kit>
    <kit id="red-kit" parents="default">
        <helmet unbreakable="true" color="B02E26" material="leather helmet"/>
        <leggings unbreakable="true" color="B02E26" material="leather leggings"/>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="yellow-team" kit="yellow-kit" yaw="180" region="yellow-spawn"/>
    <spawn team="red-team" kit="red-kit" region="red-spawn"/>
    <default yaw="90" region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="16%" repairable="false" materials="wool" show-progress="true" sparks="true">
    <destroyable name="Left Wool" owner="yellow-team" region="left-yellow-wool"/>
    <destroyable name="Right Wool" owner="yellow-team" region="right-yellow-wool"/>
    <destroyable name="Left Wool" owner="red-team" region="left-red-wool"/>
    <destroyable name="Right Wool" owner="red-team" region="right-red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="yellow-only">yellow-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="left-yellow-wool" min="51,7,103" max="54,15,106"/>
        <cuboid id="right-yellow-wool" min="-50,7,103" max="-53,15,106"/>
        <cuboid id="left-red-wool" min="-50,7,-102" max="-53,15,-105"/>
        <cuboid id="right-red-wool" min="51,7,-102" max="54,15,-105"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="yellow-spawn-protection" min="-2,0,102" max="2,oo,106"/>
        <cuboid id="red-spawn-protection" min="-2,0,-106" max="2,oo,-102"/>
    </union>
    <point id="yellow-spawn">0.5,11,104.5</point>
    <point id="red-spawn">0.5,11,-103.5</point>
    <point id="obs-spawn">90.5,46,0.5</point>
    <negative id="not-map">
        <rectangle id="map" min="-69,-124" max="69,124"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map" block="never" message="You may not edit outside the map!"/>
    <apply region="spawn-protections" block="never" message="You are not allowed to modify terrain here."/>
    <apply region="yellow-spawn-protection" enter="yellow-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection" enter="red-only" message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>stone axe</item>
    <item>wood</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item amount="2" material="arrow"/>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="5"/>
        </filter>
        <item amount="16" material="wood"/>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>49</maxbuildheight>
</map>