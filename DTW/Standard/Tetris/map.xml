<?xml version="1.0"?>
<map proto="1.4.0" game="Destroy the Wool">
<name>Tetris</name>
<version>1.0.0</version>
<objective>Destroy the other team's monument, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="9f48f032-bb96-453b-9eee-201a8d030b61"/> <!-- Jamie47 -->
    <author uuid="dfacf568-6110-4362-809c-6c59c1eb6391"/> <!-- Rascal -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"/> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="50">Blue</team>
    <team id="red-team" color="dark red" max="50">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">stone axe</item>
        <item slot="3" amount="64">wood</item>
        <item slot="8" amount="64">cooked beef</item>
        <item slot="9" amount="64">arrow</item>
        <chestplate unbreakable="true">chainmail chestplate</chestplate>
        <boots unbreakable="true">iron boots</boots>
    </kit>
    <kit id="blue-kit" parents="default">
        <helmet unbreakable="true" color="3C44AA">leather helmet</helmet>
        <leggings unbreakable="true" color="3C44AA">leather leggings</leggings>
    </kit>
    <kit id="red-kit" parents="default">
        <helmet unbreakable="true" color="B02E26">leather helmet</helmet>
	    <leggings unbreakable="true" color="B02E26">leather leggings</leggings>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="180" region="red-spawn"/>
    <default yaw="90" region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="23%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Blue Wool" owner="blue-team" materials="wool" region="blue-wool"/>
    <destroyable name="Red Wool" owner="red-team" materials="wool" region="red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="blue-wool" min="17,14,-39"  max="25,19,-47"/>
        <cuboid id="red-wool" min="-24,14,44" max="-32,19,52"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="-5,0,-45" max="-17,oo,-45"/>
        <cuboid id="red-spawn-protection" min="-2,0,50" max="10,oo,60"/>
    </union>
    <point id="blue-spawn">-13.5,10,-51.5</point>
    <point id="red-spawn">6.5,10,56.5</point>
    <point id="obs-spawn">-0.5,63,-0.5</point>
    <negative id="not-map">
        <rectangle id="map" min="-37,-55" max="30,60"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>stone axe</item>
    <item>wood</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
	<item amount="2">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>30</maxbuildheight>
</map>
