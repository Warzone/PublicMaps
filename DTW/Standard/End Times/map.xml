<map proto="1.4.0" game="Destroy the Wool">
<name>End Times</name>
<version>1.0.0</version>
<objective>Destroy the other team's monuments, made of colored wool.</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="485fb56b-261c-4b6c-a0df-b4afec6382b2"/> <!-- RetroMudkip -->
    <author uuid="6f72dd75-7599-41aa-aa76-ebd7fb745168"/> <!-- TheRandomKing12 -->
</authors>
<contributors>
    <contributor uuid="6ff4ade9-e968-4acd-80eb-1a6fa89629fb" contribution="JSON to XML and world conversion"></contributor> <!-- _Pear -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" max="50">Blue</team>
    <team id="red-team" color="dark red" max="50">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">iron axe</item>
        <item slot="3" amount="64">wood</item>
        <item slot="8" amount="64">cooked beef</item>
        <item slot="9" amount="32">arrow</item>
        <chestplate unbreakable="true">chainmail chestplate</chestplate>
        <boots unbreakable="true">iron boots</boots>
    </kit>
    <kit id="blue-kit" parents="default">
        <helmet unbreakable="true" color="3C44AA">leather helmet</helmet>
        <leggings unbreakable="true" color="3C44AA">leather leggings</leggings>
    </kit>
    <kit id="red-kit" parents="default">
        <helmet unbreakable="true" color="B02E26">leather helmet</helmet>
    <leggings unbreakable="true" color="B02E26">leather leggings</leggings>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="-90" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="90" region="red-spawn"/>
    <default region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="3.1%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Left Wool" owner="blue-team" materials="wool" region="left-blue-wool"/>
    <destroyable name="Right Wool" owner="blue-team" materials="wool" region="right-blue-wool"/>
    <destroyable name="Left Wool" owner="red-team" materials="wool" region="left-red-wool"/>
    <destroyable name="Right Wool" owner="red-team" materials="wool" region="right-red-wool"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <cuboid id="left-blue-wool" min="-157,68,36" max="-149,77,44"/>
        <cuboid id="right-blue-wool" min="-157,70,-24" max="-149,79,-32"/>
        <cuboid id="left-red-wool" min="-51,72,-32" max="-43,81,-24"/>
        <cuboid id="right-red-wool" min="-51,70,44" max="-43,79,36"/>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="-201,0,-5" max="-167,oo,11"/>
        <cuboid id="red-spawn-protection" min="0,0,11" max="-34,oo,-5"/>
    </union>
    <point id="blue-spawn">-176.3,73,3.5</point>
    <point id="red-spawn">-23.5,76,3.5</point>
    <point id="obs-spawn">-99.5,82,-30.5</point>
    <negative id="not-map">
        <rectangle id="map" min="-201,-47" max="1,56"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>stone axe</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>wool</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
        <item amount="2">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<maxbuildheight>95</maxbuildheight>
</map>
