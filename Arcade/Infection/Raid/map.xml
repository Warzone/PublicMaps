<map proto="1.4.2">
<include id="infection"/>
<name>Raid</name>
<version>1.3.0</version>
<created>2013-01-26</created>
<constants>
    <constant id="time-limit">7</constant>
    <constant id="compass-distribution-time">6</constant>
    <constant id="zombie-team-color">green</constant>
    <constant id="human-team-color">blue</constant>
</constants>
<authors>
    <author uuid="27ac2daf-3c38-4b8e-9448-46f221bb612a"/> <!-- N11cK; https://www.planetminecraft.com/project/raid-black-ops-2-remake-scaled-11-niicknumber1/ -->
</authors>
<contributors>
    <contributor uuid="39a9e1b5-1e1d-40c0-8c16-69a9568efa72"/> <!-- Teejers -->
    <contributor uuid="811968c3-0a9f-4cb5-80af-19ce37141341"/> <!-- BennyDoesStuff -->
    <contributor uuid="42195cb9-b21b-42f5-b938-5ef46f303fcd"/> <!-- _Bill -->
    <contributor uuid="b13b0b00-a8f9-422b-8963-b3d18bf80aa6"/> <!-- Bearinx -->
</contributors>
<broadcasts>
    <alert after="2s">The ${zombie-team-name} will be released in `c8 seconds`r!</alert>
    <tip after="20s" every="2m">${zombie-team-name} are able to `edouble-jump`r every 5 seconds.</tip>
    <alert after="10s">The ${zombie-team-name} has been `creleased`r!</alert>
</broadcasts>
<kits>
    <kit id="zombie-spawn-kit" parent="default-zombie-kit" force="true">
        <double-jump recharge-time="5s" power="2" recharge-before-landing="true"/>
    </kit>
    <lend filter="all(alive,not(after-release),only-zombies)">
        <kit>
            <effect amplifier="255">weakness</effect>
            <effect amplifier="255">slow</effect>
            <effect>blindness</effect>
        </kit>
    </lend>
</kits>
<spawns>
    <default region="obs-spawn" yaw="180"/>
    <!-- Human Spawns -->
    <spawn filter="before-release" team="human-team" kit="default-human-kit" region="human-spawn" yaw="180"/>
    <spawn filter="after-release" team="human-team" kit="zombie-switch-kit" region="zombie-spawn" yaw="-90"/>
    <!-- Zombie Spawns -->
    <spawn team="zombie-team" kit="zombie-spawn-kit" region="zombie-spawn" yaw="-90"/>
</spawns>
<filters>
    <not id="after-release">
        <countdown id="before-release" duration="10" message="${zombie-team-name} will be released in {0}">
            <match-running/>
        </countdown>
    </not>
    <deny id="deny-dirt-trample">
        <material>soil</material> <!-- farmland -->
    </deny>
</filters>
<regions>
    <point id="obs-spawn">-980.5,47,-990.5</point>
    <point id="human-spawn">-980.5,47,-990.5</point>
    <point id="zombie-spawn">-1061.5,47,-1055.5</point>
    <cuboid id="zombie-cage" min="-1060,47,-1057" size="-3,3,3"/>
    <apply region="zombie-cage" leave="all(only-zombies,after-release)"/>
    <apply block="deny-dirt-trample"/>
</regions>
<kill-rewards>
    <kill-reward filter="only-humans">
        <kit id="human-kill-reward">
            <effect duration="5" amplifier="2">regeneration</effect>
        </kit>
    </kill-reward>
</kill-rewards>
</map>