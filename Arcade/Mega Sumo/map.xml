<?xml version="1.0"?>
<map proto="1.4.0" game="Blitz: Sumo">
<name>Mega Sumo</name>
<version>2.0.1</version>
<objective>Be the last team standing by throwing everyone off the platform!</objective>
<gamemode>arcade</gamemode>
<gamemode>blitz</gamemode>
<!-- Authors & Contributors -->
<authors>
    <author uuid="571c1d9d-4d49-43bd-bfdb-30563e920ca9"/> <!-- Wesdial -->
    <author uuid="f3a45bea-dbde-4791-8155-0988b644ac3b"/> <!-- _iMan -->
    <author uuid="6ff4ade9-e968-4acd-80eb-1a6fa89629fb"/> <!-- _Pear -->
    <author uuid="d9efc01d-cd33-46c2-afe5-a6fc3f419f77"/> <!-- _NotMaria -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="TGM to PGM conversion"/> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="cyan"       color="dark aqua"   min="1" max="4" max-overfill="4">Cyan</team>
    <team id="green"      color="dark green"  min="1" max="4" max-overfill="4">Green</team>
    <team id="light-blue" color="aqua"        min="1" max="4" max-overfill="4">Light Blue</team>
    <team id="lime"       color="green"       min="1" max="4" max-overfill="4">Lime</team>
    <team id="orange"     color="gold"        min="1" max="4" max-overfill="4">Orange</team>
    <team id="purple"     color="dark purple" min="1" max="4" max-overfill="4">Purple</team>
    <team id="red"        color="red"         min="1" max="4" max-overfill="4">Red</team>
    <team id="yellow"     color="yellow"      min="1" max="4" max-overfill="4">Yellow</team>
</teams>
<!-- Time Limit & Lives -->
<time>160s</time>
<blitz>
    <lives>1</lives>
</blitz>
<!-- Broadcasts -->
<broadcasts>
    <alert after="20">`cWatch out! The first platform will break in 10 seconds!</alert>
    <alert after="25">`cThe first platform will break in 5 seconds!</alert>
    <alert after="26">`cThe first platform will break in 4 seconds!</alert>
    <alert after="27">`cThe first platform will break in 3 seconds!</alert>
    <alert after="28">`cThe first platform will break in 2 seconds!</alert>
    <alert after="29">`cThe first platform will break in 1 seconds!</alert>
    <alert after="30">`eThe first platform has crumbled!</alert>

    <alert after="40">`cThe second layer of platforms will break in 10 seconds!</alert>
    <alert after="45">`cThe second layer of platforms will break in 5 seconds!</alert>
    <alert after="46">`cThe second layer of platforms will break in 4 seconds!</alert>
    <alert after="47">`cThe second layer of platforms will break in 3 seconds!</alert>
    <alert after="48">`cThe second layer of platforms will break in 2 seconds!</alert>
    <alert after="49">`cThe second layer of platforms will break in 1 seconds!</alert>
    <alert after="50">`eThe second layer of platforms has crumbled!</alert>

    <alert after="60">`cThe third layer of platforms will break in 10 seconds!</alert>
    <alert after="65">`cThe third layer of platforms will break in 5 seconds!</alert>
    <alert after="66">`cThe third layer of platforms will break in 4 seconds!</alert>
    <alert after="67">`cThe third layer of platforms will break in 3 seconds!</alert>
    <alert after="68">`cThe third layer of platforms will break in 2 seconds!</alert>
    <alert after="69">`cThe third layer of platforms will break in 1 seconds!</alert>
    <alert after="70">`eThe third layer of platforms has crumbled!</alert>

    <alert after="80">`cThe fourth layer of platforms will break in 10 seconds!</alert>
    <alert after="85">`cThe fourth layer of platforms will break in 5 seconds!</alert>
    <alert after="86">`cThe fourth layer of platforms will break in 4 seconds!</alert>
    <alert after="87">`cThe fourth layer of platforms will break in 3 seconds!</alert>
    <alert after="88">`cThe fourth layer of platforms will break in 2 seconds!</alert>
    <alert after="89">`cThe fourth layer of platforms will break in 1 seconds!</alert>
    <alert after="90">`eThe fourth layer of platforms has crumbled!</alert>

    <alert after="100">`cWatch out! The world border is getting close!</alert>
</broadcasts>
<!-- Kits -->
<kits>
    <kit id="cyan-kit">
        <game-mode>adventure</game-mode>
        <item slot="0" name="`3`lSUMO WEAPON" damage="6">ink sack</item>
        <chestplate unbreakable="true" locked="true" color="4C7F99">leather chestplate</chestplate>
        <effect duration="1000000" amplifier="5">saturation</effect>
        <effect duration="1000000" amplifier="1">instant_health</effect>
    </kit>
    <kit id="green-kit">
        <game-mode>adventure</game-mode>
        <item slot="0" name="`2`lSUMO WEAPON" damage="2">ink sack</item>
        <chestplate unbreakable="true" locked="true" color="667F33">leather chestplate</chestplate>
