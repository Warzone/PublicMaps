<!-- Platforms -->
<destroyables required="false" show="false">
    <destroyable name="First platform"  owner="cyan"   materials="stained clay;sea lantern"       modes="first-to-air"  region="first-platform"/>
    <destroyable name="Second platform" owner="green"  materials="stained clay;sea lantern;chest" modes="second-to-air" region="second-platform"/>
    <destroyable name="Third platform"  owner="lime"   materials="stained clay;sea lantern"       modes="third-to-air"  region="third-platform"/>
    <destroyable name="Fourth platform" owner="orange" materials="stained clay;sea lantern"       modes="fourth-to-air" region="fourth-platform"/>
</destroyables>
<!-- Modes -->
<modes>
    <mode id="first-to-air"  after="30s" show-before="0" material="air"/>
    <mode id="second-to-air" after="50s" show-before="0" material="air"/>
    <mode id="third-to-air"  after="70s" show-before="0" material="air"/>
    <mode id="fourth-to-air" after="90s" show-before="0" material="air"/>
</modes>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <cylinder id="first-platform"  base="0.5,38,0.5" radius="25" height="5"/>
    <cylinder id="second-platform" base="0.5,27,0.5" radius="16" height="5"/>
    <cylinder id="third-platform"  base="0.5,16,0.5" radius="20" height="8"/>
    <cylinder id="fourth-platform" base="0.5,8,0.5"  radius="25 " height="6"/>
    <!-- Applications -->
    <apply block="never" message="You are not allowed to modify terrain here."/>
</regions>
<!-- Spawns -->
<spawns>
    <spawn team="cyan" kit="cyan-kit">
        <regions>
            <point>0.5,41,-19.5</point>
        </regions>
    </spawn>
    <spawn team="green" kit="green-kit">
        <regions yaw="90">
            <point>20.5,41,0.5</point>
        </regions>
    </spawn>
    <spawn team="light-blue" kit="light-blue-kit">
        <regions yaw="45">
            <point>14.5,41,-13.5</point>
        </regions>
    </spawn>
    <spawn team="lime" kit="lime-kit">
        <regions yaw="-135">
            <point>-13.5,41,14.5</point>
        </regions>
    </spawn>
    <spawn team="orange" kit="orange-kit">
        <regions yaw="-90">
            <point>-19.5,41,0.5</point>
        </regions>
    </spawn>
    <spawn team="purple" kit="purple-kit">
        <regions yaw="-180">
            <point>0.5,41,20.5</point>
        </regions>
    </spawn>
    <spawn team="red" kit="red-kit">
        <regions yaw="135">
            <point>14.5,41,14.5</point>
        </regions>
    </spawn>
    <spawn team="yellow" kit="yellow-kit">
        <regions yaw="-40">
            <point>-13.5, 41, -13.5</point>
        </regions>
    </spawn>
    <default>
        <regions>
            <point>0.5,60,0.5</point>
        </regions>
    </default>
</spawns>
<!-- Itemremove -->
<itemremove>
    <item>ink sack</item>
    <item>leather helmet</item>
</itemremove>
<!-- World Border -->
<world-borders center="0.5, 0.5">
    <world-border size="250"/>
     <!-- The world border starts shrinking once the match starts, it will physically appear after 100 seconds. -->
    <world-border size="3" after="0s" duration="125s" damage="100" buffer="0"/>
</world-borders>
<!-- Miscellaneous -->
<hunger>
    <depletion>off</depletion>
</hunger>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
</map>
