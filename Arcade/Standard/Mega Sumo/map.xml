<map proto="1.5.0" game="Blitz: Sumo">
<name>Mega Sumo</name>
<created>2021-11-23</created>
<version>2.0.4</version>
<objective>Be the last team standing by knocking everyone off the platforms!</objective>
<gamemode>arcade</gamemode>
<gamemode>blitz</gamemode>
<!-- Authors & Contributors -->
<authors>
    <author uuid="571c1d9d-4d49-43bd-bfdb-30563e920ca9"/> <!-- Wesdial -->
    <author uuid="f3a45bea-dbde-4791-8155-0988b644ac3b"/> <!-- _iMan -->
    <author uuid="6ff4ade9-e968-4acd-80eb-1a6fa89629fb"/> <!-- _Pear -->
    <author uuid="d9efc01d-cd33-46c2-afe5-a6fc3f419f77"/> <!-- _NotMaria -->
</authors>
<contributors>
    <contributor uuid="f846db63-3df5-4e81-9dd3-7bb05027fdfb" contribution="JSON to XML conversion"/> <!-- TheBestGamer -->
</contributors>
<!-- Teams -->
<teams>
    <team id="cyan" color="dark aqua" min="1" max="4" max-overfill="4">Cyan</team>
    <team id="green" color="dark green" min="1" max="4" max-overfill="4">Green</team>
    <team id="light-blue" color="aqua" min="1" max="4" max-overfill="4">Light Blue</team>
    <team id="lime" color="green" min="1" max="4" max-overfill="4">Lime</team>
    <team id="orange" color="gold" min="1" max="4" max-overfill="4">Orange</team>
    <team id="purple" color="dark purple" min="1" max="4" max-overfill="4">Purple</team>
    <team id="red" color="red" min="1" max="4" max-overfill="4">Red</team>
    <team id="yellow" color="yellow" min="1" max="4" max-overfill="4">Yellow</team>
</teams>
<!-- Time Limit & Lives -->
<time>160s</time>
<blitz>
    <lives>1</lives>
</blitz>
<!-- Broadcasts -->
<broadcasts>
    <!-- First Layer -->
    <alert after="20">Watch out! The first platform will break in `c10 seconds`r!</alert>
    <alert after="27">The first platform will break in `c3 seconds`r!</alert>
    <alert after="28">The first platform will break in `c2 seconds`r!</alert>
    <alert after="29">The first platform will break in `c1 second`r!</alert>
    <!-- Second Layer -->
    <alert after="40">The second layer of platforms will break in `c10 seconds`r!</alert>
    <alert after="47">The second layer of platforms will break in `c3 seconds`r!</alert>
    <alert after="48">The second layer of platforms will break in `c2 seconds`r!</alert>
    <alert after="49">The second layer of platforms will break in `c1 second`r!</alert>
    <!-- Third Layer -->
    <alert after="60">The third layer of platforms will break in `c10 seconds`r!</alert>
    <alert after="67">The third layer of platforms will break in `c3 seconds`r!</alert>
    <alert after="68">The third layer of platforms will break in `c2 seconds`r!</alert>
    <alert after="69">The third layer of platforms will break in `c1 second`r!</alert>
    <!-- Fourth Layer -->
    <alert after="80">The fourth layer of platforms will break in `c10 seconds`r!</alert>
    <alert after="87">The fourth layer of platforms will break in `c3 seconds`r!</alert>
    <alert after="88">The fourth layer of platforms will break in `c2 seconds`r!</alert>
    <alert after="89">The fourth layer of platforms will break in `c1 second`r!</alert>
    <!-- World Border Notification -->
    <alert after="100">Watch out! The `cWorld Border `ris getting close!</alert>
</broadcasts>
<!-- Kits -->
<kits>
    <kit id="main-kit">
        <game-mode>adventure</game-mode>
        <chestplate unbreakable="true" locked="true" team-color="true" material="leather chestplate"/>
        <effect amplifier="2">instant_health</effect>
    </kit>
    <kit id="cyan-kit" parents="main-kit">
        <item slot="0" name="`3`lSUMO WEAPON" damage="6" material="ink sack"/>
    </kit>
    <kit id="green-kit" parents="main-kit">
        <item slot="0" name="`2`lSUMO WEAPON" damage="2" material="ink sack"/>
    </kit>
    <kit id="light-blue-kit" parents="main-kit">
        <item slot="0" name="`b`lSUMO WEAPON" damage="12" material="ink sack"/>
    </kit>
    <kit id="lime-kit" parents="main-kit">
        <item slot="0" name="`a`lSUMO WEAPON" damage="10" material="ink sack"/>
    </kit>
    <kit id="orange-kit" parents="main-kit">
        <item slot="0" name="`6`lSUMO WEAPON" damage="14" material="ink sack"/>
    </kit>
    <kit id="purple-kit" parents="main-kit">
        <item slot="0" name="`5`lSUMO WEAPON" damage="5" material="ink sack"/>
    </kit>
    <kit id="red-kit" parents="main-kit">
        <item slot="0" name="`c`lSUMO WEAPON" damage="1" material="ink sack"/>
    </kit>
    <kit id="yellow-kit" parents="main-kit">
        <item slot="0" name="`e`lSUMO WEAPON" damage="11" material="ink sack"/>
    </kit>
    <kit id="void-kit" force="true">
        <clear effects="true" items="false" armor="false"/>
        <health>1</health>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="cyan" kit="cyan-kit">
        <regions>
            <point>0.5,41,-19.5</point>
        </regions>
    </spawn>
    <spawn team="green" kit="green-kit">
        <regions yaw="90">
            <point>20.5,41,0.5</point>
        </regions>
    </spawn>
    <spawn team="light-blue" kit="light-blue-kit">
        <regions yaw="45">
            <point>14.5,41,-13.5</point>
        </regions>
    </spawn>
    <spawn team="lime" kit="lime-kit">
        <regions yaw="-135">
            <point>-13.5,41,14.5</point>
        </regions>
    </spawn>
    <spawn team="orange" kit="orange-kit">
        <regions yaw="-90">
            <point>-19.5,41,0.5</point>
        </regions>
    </spawn>
    <spawn team="purple" kit="purple-kit">
        <regions yaw="-180">
            <point>0.5,41,20.5</point>
        </regions>
    </spawn>
    <spawn team="red" kit="red-kit">
        <regions yaw="135">
            <point>14.5,41,14.5</point>
        </regions>
    </spawn>
    <spawn team="yellow" kit="yellow-kit">
        <regions yaw="-40">
            <point>-13.5, 41, -13.5</point>
        </regions>
    </spawn>
    <default>
        <regions>
            <point>0.5,60,0.5</point>
        </regions>
    </default>
</spawns>
<!-- Filters -->
<filters>
<!-- Block filters -->
    <material id="stained-clay">stained clay</material>
    <material id="sea-lantern">sea lantern</material>
    <material id="chest">chest</material>
    <!-- First Platform -->
    <after id="first-to-air" duration="30s">
        <match-started/>
    </after>
    <!-- Second Platform -->
    <after id="second-to-air" duration="50s">
        <match-started/>
    </after>
    <!-- Third Platform -->
    <after id="third-to-air" duration="70s">
        <match-started/>
    </after>
    <!-- Fourth Platform -->
    <after id="fourth-to-air" duration="90s">
        <match-started/>
    </after>
</filters>
<!-- Actions -->
<actions>
    <!-- First Platform -->
    <trigger scope="match" filter="first-to-air">
        <action>
            <fill region="first-platform" filter="stained-clay" material="air"/>
            <fill region="first-platform" filter="sea-lantern" material="air"/>
            <message text="`4The first layer of platforms has crumbled!"/>
            <sound preset="tip"/>
        </action>
    </trigger>
    <trigger scope="match" filter="second-to-air">
        <action>
            <fill region="second-platform" filter="stained-clay" material="air"/>
            <fill region="second-platform" filter="sea-lantern" material="air"/>
            <fill region="second-platform" filter="chest" material="air"/>
            <message text="`4The second layer of platforms has crumbled!"/>
            <sound preset="tip"/>
        </action>
    </trigger>
    <trigger scope="match" filter="third-to-air">
        <action>
            <fill region="third-platform" filter="stained-clay" material="air"/>
            <fill region="third-platform" filter="sea-lantern" material="air"/>
            <message text="`4The third layer of platforms has crumbled!"/>
            <sound preset="tip"/>
        </action>
    </trigger>
    <trigger scope="match" filter="fourth-to-air">
        <action>
            <fill region="fourth-platform" filter="stained-clay" material="air"/>
            <fill region="fourth-platform" filter="sea-lantern" material="air"/>
            <message text="`4The fourth layer of platforms has crumbled!"/>
            <sound preset="tip"/>
        </action>
    </trigger>
</actions>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <cylinder id="first-platform" base="0.5,38,0.5" radius="25" height="5"/>
    <cylinder id="second-platform" base="0.5,27,0.5" radius="16" height="5"/>
    <cylinder id="third-platform" base="0.5,16,0.5" radius="20" height="8"/>
    <cylinder id="fourth-platform" base="0.5,8,0.5" radius="25" height="6"/>
    <below id="void-area" y="0"/>
    <!-- Applications -->
    <apply block="never"/>
    <apply region="void-area" kit="void-kit"/>
</regions>
<!-- ItemRemove -->
<itemremove>
    <item>ink sack</item>
    <item>leather helmet</item>
</itemremove>
<!-- World Border -->
<world-borders center="0.5, 0.5">
    <world-border size="250"/>
    <world-border size="3" after="0s" duration="125s" damage="100" buffer="0"/>
</world-borders>
<!-- Miscellaneous -->
<hunger>
    <depletion>off</depletion>
</hunger>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
</map>
