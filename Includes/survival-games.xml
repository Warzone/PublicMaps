        <fill loot="mixed-chests-loottable" filter="standard-chests" refill-trigger="chest-refill" refill-clear="false"/>
    </if>
</lootables>

<damage>
    <deny>
        <all>
            <any>
                <if constant="grace-period-enabled" constant-value="true" constant-compare="equals">
                    <filter id="grace-period-countdown"/>
                </if>
                <if constant="dm-enabled" constant-value="true" constant-compare="equals">
                    <filter id="dm-teleport-countdown"/>
                </if>
                <if constant="match-delay-enabled" constant-value="true" constant-compare="equals">
                    <not>
                        <filter id="starting-countdown"/>
                    </not>
                </if>
            </any>
            <any>
                <cause>melee</cause>
                <cause>projectile</cause>
            </any>
        </all>
    </deny>
</damage>
<if constant="cannon-enabled" constant-value="true" constant-compare="equals">
    <kill-rewards>
        <kill-reward filter="not(remaining=2)" victim-action="player-killed"/>
    </kill-rewards>
</if>
<hunger>
    <depletion>${hunger-depletion}</depletion>
</hunger>
<itemremove>
    <item>sapling</item>
    <item>seeds</item>
    <item>red rose</item>
    <item>yellow flower</item>
    <item>double plant</item>
    <item>red mushroom</item>
    <item>brown mushroom</item>
    <item>long grass</item>
    <item>dead bush</item>
</itemremove>
<keep-potion-bottles/>
<mobs>
    <filter>
        <spawn>spawner</spawn>
    </filter>
</mobs>
</map>
