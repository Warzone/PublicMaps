<?xml version="1.0" encoding="UTF-8"?>
<map proto="1.4.2">
<name>Sector Six</name>
<version>1.1.0</version>
<gamemode>dtm</gamemode>
<objective>Destroy the enemy monuments to win!</objective>
<authors>
    <author uuid="da98a2f1-673c-4cec-b547-e0a342abfde4"/> <!-- Almyran -->
</authors>
<teams>
   <team id="orange-team" color="gold" min="2" max="25" max-overfill="28">Orange</team>
   <team id="cyan-team" color="dark aqua" min="2" max="25" max-overfill="28">Cyan</team>
</teams>
<spawns>
    <spawn team="orange-team" kit="okit">
        <regions yaw="0">
            <point>0.5,36,-154.5</point>
        </regions>
    </spawn>
    <spawn team="cyan-team" kit="ckit">
        <regions yaw="180">
            <point>0.5,36,0.5</point>
        </regions>
    </spawn>
    <default>
        <regions yaw="90">
            <point>106.5,84,-74.5</point>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="def" force="true">
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" enchantment="arrow infinite:1" material="bow"/>
        <item slot="2" unbreakable="true" material="diamond pickaxe"/>
        <item slot="3" unbreakable="true" material="stone axe"/>
        <item slot="4" amount="64" material="wood"/>
        <item slot="5" amount="64" material="wood"/>
        <item slot="7" amount="1" material="golden apple"/>
        <item slot="8" amount="64" material="cooked beef"/>
        <item slot="9" amount="64" material="arrow"/>
        <chestplate unbreakable="true" material="chainmail chestplate"/>
        <boots unbreakable="true" material="iron boots"/>
    </kit>
    <kit id="okit" parents="def">
        <helmet unbreakable="true" color="D87F33" enchantment="protection environmental:1" material="leather helmet"/>
        <leggings unbreakable="true" color="D87F33" material="leather leggings"/>
    </kit>
    <kit id="ckit" parents="def">
        <helmet unbreakable="true" color="4C7F99" enchantment="protection environmental:1" material="leather helmet"/>
        <leggings unbreakable="true" color="4C7F99" material="leather leggings"/>
    </kit>
    <kit id="k-r">
        <item material="golden apple"/>
    </kit>
</kits>
<kill-rewards>
    <kill-reward>
        <kit id="k-r"/>
    </kill-reward>
</kill-rewards>
<filters>
    <not id="no-void">
        <void/>
    </not>
    <team id="only-orange">orange-team</team>
    <team id="only-cyan">cyan-team</team>
</filters>
<regions>
    <union id="monuments">
        <block id="o-r-m">71,38,-155</block>
        <block id="o-b-m">0,38,-226</block>
        <block id="o-l-m">-71,38,-155</block>
        <block id="c-r-m">-71,38,0</block>
        <block id="c-b-m">0,38,71</block>
        <block id="c-l-m">71,38,0</block>
    </union>
    <union id="spawn-protections">
        <cylinder id="orange-spawn" base="0.5,34,-155.5" height="20" radius="12" />
        <cylinder id="cyan-spawn" base="0.5,34,0.5" height="20" radius="12" />
    </union>
    <apply region="spawn-protections" block="never"       message="You are not allowed to modify terrain here."/>
    <apply region="orange-spawn"      enter="only-orange" message="You may not enter the enemy spawn."/>
    <apply region="cyan-spawn"        enter="only-cyan"   message="You may not enter the enemy spawn."/>
    <!-- the map have blocks 36 to set the build areas -->
    <apply block="no-void" message="You may not modify blocks outside the playing area!"/>
</regions>
<destroyables owner="orange-team" completion="100%" sparks="true">
    <destroyable name="Right Monumnet" region="o-r-m" materials="obsidian"/>
    <destroyable name="Back Monument" region="o-b-m" materials="obsidian"/>
    <destroyable name="Left Monument" region="o-l-m" materials="obsidian"/>
</destroyables>
<destroyables owner="cyan-team" completion="100%" sparks="true">
    <destroyable name="Right Monument" region="c-r-m" materials="obsidian"/>
    <destroyable name="Back Monument" region="c-b-m" materials="obsidian"/>
    <destroyable name="Left Monument" region="c-l-m" materials="obsidian"/>
</destroyables>
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>diamond pickaxe</item>
    <item>stone axe</item>
    <item>golden apple</item>
    <item>cooked beef</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>obsidian</item>
    <item>wood</item>
    <item>arrow</item>
</itemremove>
<maxbuildheight>70</maxbuildheight>
</map>
