<?xml version="1.0"?>
<map proto="1.4.0">
<name>Streetside</name>
<version>1.0.0</version>
<objective>Destroy the enemy's Emerald monument!</objective>
<gamemode>dtm</gamemode>
<!-- Map Authors -->
<authors>
    <author uuid="571c1d9d-4d49-43bd-bfdb-30563e920ca9"/> <!-- Wesdial -->
    <author uuid="f3a45bea-dbde-4791-8155-0988b644ac3b"/> <!-- _iMan -->
</authors>
<broadcasts>
    <!-- Tips/Broadcasts -->
    <tip after="1s" every="3m">Iron blocks regenerate on this map!</tip>
</broadcasts>
<!-- Teams -->
<teams>
    <team id="green-team" color="dark green" max="10">Green</team>
    <team id="blue-team"  color="blue"       max="10">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="main-kit">
        <clear />
        <item slot="0" unbreakable="true" material="stone sword" />
        <item slot="1" unbreakable="true" material="bow" />
        <item slot="2" unbreakable="true" material="stone pickaxe" />
        <item slot="3" unbreakable="true" material="stone axe" />
        <item slot="4" amount="64"        material="wood" />
        <item slot="7" amount="24"        material="arrow" />
        <item slot="8" amount="64"        material="golden carrot" />
        <chestplate    unbreakable="true" material="chainmail chestplate" />
    </kit>
    <kit id="green-kit" parents="main-kit">
        <helmet   unbreakable="true" color="cd0000" material="leather helmet" />
        <leggings unbreakable="true" color="cd0000" material="leather leggings" />
        <boots    unbreakable="true" color="cd0000" material="leather boots" />
    </kit>
    <kit id="blue-kit" parents="main-kit">
        <helmet   unbreakable="true" color="0066cc" material="leather helmet" />
        <leggings unbreakable="true" color="0066cc" material="leather leggings" />
        <boots    unbreakable="true" color="0066cc" material="leather boots" />
    </kit>
</kits>
<!-- Spawns and Timer -->
<spawns>
    <default>
        <regions>
            <point>35.5,61.5,-1.5</point>
        </regions>
    </default>
    <spawn team="blue-team" kit="blue-kit">
        <regions>
            <point>76.5,27,4.5</point>
        </regions>
    </spawn>
    <spawn team="green-team" kit="green-kit">
        <regions>
            <point yaw="-180">-5.5,27,89.5</point>
        </regions>
    </spawn>
</spawns>
<respawn delay="2s"/>
<!-- Filters -->
<filters>
    <team id="only-green">green-team</team>
    <team id="only-blue">blue-team</team>
    <deny id="deny-players">
        <participating/>
    </deny>
    <all id="only-iron">
        <material>iron block</material>
    </all>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="69,0,-5" max="86,oo,17"/>
        <cuboid id="green-spawn-protection" min="1,0,97" max="-16,oo,76"/>
    </union>
    <union id="iron-spawners">
        <cuboid id="blue-iron-spawn" min="77,25,19" max="84,30,25"/>
        <cuboid id="green-iron-spawn" min="-8,25,74" max="-14,30,68"/>
    </union>
    <!-- Applications -->
    <apply region="iron-spawners" block-break="only-iron" block-place="deny-players" message="You may only break iron blocks!"/>
    <apply region="spawn-protections" block="never" message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="only-blue" message="You may not enter the enemy spawn."/>
    <apply region="green-spawn-protection" enter="only-green" message="You may not enter the enemy spawn."/>
</regions>
<!-- Monuments -->
<destroyables materials="emerald block" repairable="false" mode-changes="true">
    <destroyable id="blue-monument" name="Monument" owner="blue-team">
        <region>
            <cuboid min="77,26,72" max="73,32,68"/>
        </region>
    </destroyable>
    <destroyable id="green-monument" name="Monument" owner="green-team">
        <region>
            <cuboid min="-7,26,21" max="-3,32,25"/>
        </region>
    </destroyable>
</destroyables>
<!-- Monument Modes -->
<modes>
    <mode after="12m" material="coal block"/>
</modes>
<!-- Renewables -->
<renewables>
    <renewable interval="5" grow="true" particles="false" region="iron-spawners" renew-filter="only-iron"/>
</renewables>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="4" material="arrow"/>
        <item amount="1" material="golden apple"/>
    </kill-reward>
</kill-rewards>
<!-- Block Drops -->
<blockdrops>
    <rule>
        <filter>
            <material>iron block</material>
        </filter>
        <drops>
            <item amount="9" material="iron ingot"/>
        </drops>
    </rule>
</blockdrops>
<!-- Item Rules -->
<item-mods>
    <rule>
        <match>
            <material>iron sword</material>
            <material>iron pickaxe</material>
            <material>gold pickaxe</material>
            <material>iron axe</material>
            <material>gold axe</material>
            <material>iron spade</material>
            <material>iron helmet</material>
            <material>iron chestplate</material>
            <material>iron leggings</material>
            <material>iron boots</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
</item-mods>
<!-- Item Remove -->
<itemremove>
    <item>golden carrot</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>sapling</item>
    <item>emerald block</item>
</itemremove>
<!-- Tool Repair -->
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
    <tool>stone axe</tool>
</toolrepair>
<!-- Misc -->
<maxbuildheight>41</maxbuildheight>
</map>