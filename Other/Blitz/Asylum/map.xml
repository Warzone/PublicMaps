<map proto="1.4.2" game="Frenzy">
<name>Asylum</name>
<version>1.0.2</version>
<objective>Eliminate the opposing team.</objective>
<gamemode>blitz</gamemode>
<gamemode>arcade</gamemode>
<authors>
    <author uuid="68cfe240-d81c-46ae-8a93-9e3eb5d71e3e"/> <!-- Myv -->
    <author uuid="f3a45bea-dbde-4791-8155-0988b644ac3b"/> <!-- _iMan -->
</authors>
<blitz>
    <lives>1</lives>
    <broadcastLives>true</broadcastLives>
</blitz>
<teams>
   <team id="red" color="red" max="10">Red</team>
   <team id="blue" color="blue" max="10">Blue</team>
</teams>
<kits>
    <kit id="default" force="true">
        <item slot="0" unbreakable="true" material="wood sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="8" amount="12" material="bread"/>
        <item slot="28" amount="16" material="arrow"/>
        <helmet team-color="true" unbreakable="true" material="leather helmet"/>
        <chestplate unbreakable="true" material="chainmail chestplate"/>
        <leggings team-color="true" unbreakable="true" material="leather leggings"/>
        <boots team-color="true" unbreakable="true" material="leather boots"/>
        <effect duration="3" amplifier="50">damage_resistance</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="default">
        <regions yaw="-45">
            <point>-35.5,70,-20.5</point>
        </regions>
    </spawn>
    <spawn team="blue" kit="default">
        <regions yaw="135">
            <point>1.5,70,25.5</point>
        </regions>
    </spawn>
    <default>
        <regions>
            <point>-17,113,-33</point>
        </regions>
    </default>
</spawns>
<regions>
    <apply block="never"/>
</regions>
<itemremove>
    <item>bread</item>
    <item>arrow</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>golden apple</item>
</itemremove>
<toolrepair>
    <tool>wood sword</tool>
    <tool>bow</tool>
</toolrepair>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item amount="2" material="arrow"/>
    </kill-reward>
</kill-rewards>
</map>