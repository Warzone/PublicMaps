<map proto="1.4.2">
<name>Bill's Town Blitz</name>
<version>1.0.5</version>
<objective>Eliminate the opposing team.</objective>
<gamemode>blitz</gamemode>
<gamemode>arcade</gamemode>
<authors>
    <author uuid="07fa10c6-f564-4630-861e-fe134ae27527"/> <!-- Yoyo_ -->
    <author uuid="f70b7a8f-93b2-480f-9d54-88e21485a042"/> <!-- Diamyx -->
</authors>
<teams>
    <team id="purple" color="dark purple" max="25">Purple</team>
    <team id="orange" color="gold" max="25">Orange</team>
</teams>
<kits>
    <kit id="spawn" force="true">
        <item slot="0" material="stone sword"/>
        <item slot="1" material="bow"/>
        <item slot="2" amount="16" material="arrow"/>
        <item slot="3" material="golden apple"/>
        <leggings locked="true" material="chainmail leggings"/>
        <helmet locked="true" team-color="true" material="leather helmet"/>
        <chestplate locked="true" team-color="true" material="leather chestplate"/>
        <boots locked="true" enchantment="protection fall" team-color="true" material="leather boots"/>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="vision">
        <effect>night vision</effect>
    </kit>
</kits>
<spawns>
    <spawn team="orange" kit="spawn" region="orange-spawn" yaw="180"/>
    <spawn team="purple" kit="spawn" region="purple-spawn"/>
    <default kit="vision" region="default-spawn" yaw="180"/>
</spawns>
<filters>
    <team id="orange-only">orange</team>
    <team id="purple-only">purple</team>
</filters>
<regions>
    <union id="spawns">
        <cuboid id="purple-spawn" min="970,6,-1197" max="968,6,-1197"/>
        <cuboid id="orange-spawn" min="864,6,-1220" max="862,6,-1220"/>
        <cuboid id="default-spawn" min="933,21,-1189" max="934,21,-1188"/>
    </union>
    <apply block="never"/>
</regions>
<time>5m</time>
<blitz>
    <lives>1</lives>
    <broadcastLives>true</broadcastLives>
</blitz>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item amount="8" material="arrow"/>
    </kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>golden apple</item>
    <item>chainmail leggings</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather boots</item>
    <item>arrow</item>
</itemremove>
<respawn auto="true"/>
</map>
