    <team id="red" color="dark red" max="13" max-overfill="17">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" enchantment="arrow infinite" material="bow"/>
        <item slot="2" amount="2" material="golden apple"/>
        <item slot="28" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" enchantment="protection projectile" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" team-color="true" material="leather leggings"/>
        <boots unbreakable="true" enchantment="protection fall:2" team-color="true" material="leather boots"/>
        <effect duration="3" amplifier="2">heal</effect>
        <effect duration="3">damage resistance</effect>
        <effect duration="2">increase damage</effect>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="spawn-kit" angle="158.5,7,-1.5">
        <regions>
            <cuboid min="154.5,6,-5.5" max="156.5,7,-3.5"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="spawn-kit" angle="212.5,7,52.5">
        <regions>
            <cuboid min="214.5,6,54.5" max="216.5,7,56.5"/>
        </regions>
    </spawn>
    <default angle="126.5,33,25.5">
        <regions>
            <cuboid min="120.5,32,24.5" max="122.5,33,26.5"/>
        </regions>
    </default>
</spawns>
<regions>
    <apply block="never"/>
</regions>
<time>10m</time>
<score>
    <kills>1</kills>
</score>
<toolrepair>
    <tool>bow</tool>
    <tool>stone sword</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>golden apple</item>
    <item>arrow</item>
</itemremove>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
    </kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
