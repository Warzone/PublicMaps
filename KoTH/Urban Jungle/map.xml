<map proto="1.5.0">
<name>Urban Jungle</name>
<variant id="classic">Classic</variant>
<version>1.0.1</version>
<objective>Control the center until you have 500 points to win!</objective>
<gamemode>koth</gamemode>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="ef4ea031-998f-4ec9-b7b6-1bdd428bcef8"/> <!-- Plastix -->
</authors>
<rules>
    <rule>Players have resistance and reduced knockback in spawn!</rule>
</rules>
<teams>
    <team id="blue-team" color="blue" max="24">Blue</team>
    <team id="red-team" color="dark red" max="24">Red</team>
</teams>
<kits>
    <kit id="spawn-prot">
        <potion amplifier="10" duration="oo">damage resistance</potion>
        <knockback-reduction>1</knockback-reduction>
    </kit>
    <kit id="spawn-kit">
        <if variant="classic">
            <item slot="0" material="stone sword"/>
            <item slot="1" material="bow"/>
            <item slot="2" material="stone pickaxe"/>
            <item slot="8" amount="64" material="arrow"/>
            <item slot="3" amount="64" material="glass"/>
            <item slot="4" material="potion" damage="8194">
                <effect duration="3m">speed</effect>
            </item>
            <helmet unbreakable="true" material="gold helmet"/>
            <chestplate unbreakable="true" material="leather chestplate"/>
            <leggings unbreakable="true" material="leather leggings"/>
            <boots unbreakable="true" material="leather boots"/>
            <effect duration="5s">regeneration</effect>
        </if>
        <unless variant="classic">
            <item slot="0" unbreakable="true" material="stone sword"/>
            <item slot="1" unbreakable="true" material="bow"/>
            <item slot="2" material="golden apple"/>
            <item slot="3" unbreakable="true" material="iron pickaxe"/>
            <item slot="4" amount="32">98</item>
            <item slot="5" amount="48">glass</item>
            <item slot="6" material="potion" damage="8194">
                <effect duration="3m">speed</effect>
            </item>
            <item slot="8" amount="32">arrow</item>
            <helmet unbreakable="true" material="gold helmet"/>
            <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
            <leggings unbreakable="true" material="chainmail leggings">
                <enchantment level="1">projectile_protection</enchantment>
            </leggings>
            <boots unbreakable="true" material="iron boots">
                <enchantment level="1">feather falling</enchantment>
            </boots>
            <effect duration="5s">regeneration</effect>
        </unless>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="-90">
        <region>
            <point>-45,56,-15</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit" yaw="90">
        <region>
            <point>46,56,16</point>
        </region>
    </spawn>
    <default>
        <regions>
            <point yaw="-180">0.5,70,107.5</point>
        </regions>
    </default>
</spawns>
<regions>
    <negative>
        <cuboid id="playable" min="-61,51,-61" max="62,120,62"/> 
    </negative>
    <union id="spawns">
        <cuboid id="red-spawn" min="-47,58.1,-17" max="-43,58.1,-13"/>
        <cuboid id="blue-spawn" min="44,58.1,14" max="48,58.1,18"/>
    </union>
    <union id="spawn-protection">
        <cuboid id="red-spawn-protection" min="-38,51,-8" max="-52,120,-22"/>
        <cuboid id="blue-spawn-protection" min="39,51,23" max="53,120,9"/>
        <lend-kit>spawn-prot</lend-kit>
    </union>
    <cylinder id="hill" base="0.5,71,0.5" radius="5.5" height="5"/>
    <cuboid id="hill-progess" min="-5,71,-5" max="6,72,6"/>
    <apply enter="only-red" region="red-spawn-protection" message="`cYou may not enter the opposing team's spawn!"/>
    <apply enter="only-blue" region="blue-spawn-protection" message="`cYou may not enter the opposing team's spawn!"/>
    <apply block-break="never" block-place="never" region="spawn-protection" message="`cYou may not modify the spawns!"/>
    <apply block="never" region="hill" message="`cYou may not modify the hill!"/>
    <apply leave="never" region="playable" message="`cYou may not leave the playing field."/>
</regions>
<filters>
    <team id="only-red">red-team</team>
    <team id="only-blue">blue-team</team>
    <all id="punch-match">
        <holding>
            <item material="bow" enchantment="punch"/>
        </holding>
    </all>
</filters>
<actions>
    <unless variant="classic">
        <action id="punch-replacer" scope="player">
            <enchant-item ignore-metadata="true" enchantment="punch" level="0">
                <find material="bow"/>
            </enchant-item>
        </action>
    <trigger filter="punch-match" action="punch-replacer" scope="player"/>
    </unless>
</actions>
<control-points required="false" capture-time="10s" neutral-state="true" show-progress="true" incremental="true" show-messages="true">
    <control-point id="Hill">
        <capture>
            <region id="hill"/>
        </capture>
        <progress>
            <region id="hill-progess"/>
        </progress>
    </control-point>
</control-points>
<itemremove>
    <item>gold helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>glass</item>
    <item>potion</item>
    <item>arrow</item>
    <item>374</item>
    <item>golden apple</item>
    <unless variant="classic">
        <item>chainmail leggings</item>
        <item>iron boots</item>
    </unless>
</itemremove>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
    <tool>iron pickaxe</tool>
</toolrepair>
<killreward>
    <item amount="16" material="arrow"/>
    <unless variant="classic">
        <item amount="16" material="98"/>
        <item amount="16" material="glass"/>
    </unless>
</killreward>
<hunger>
    <depletion>off</depletion>      <!-- I tried to keep hunger for classic variant, not possible atm  -->
</hunger>
<maxbuildheight>120</maxbuildheight>
<score>
    <limit>500</limit>
</score>
</map>
